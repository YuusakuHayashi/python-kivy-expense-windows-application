<InputScreen>:
    BoxLayout:
        orientation: "vertical"
    	canvas.before:
    	    Color:
    	        rgba: 0.9, 0.9, 0.9, 1
    	    Rectangle:
    	        pos: self.pos
    	        size: self.size
    	Label:
    	    size_hint_y: 0.15
    	    text: "経費申請"
    	    font_size: 32
    	BoxLayout:
    	    orientation: "vertical"
    	    size_hint_y: 0.85 
    	    InputScreen_BoxLayout:
				FixedSizeLabel:
    	    		text: "社員番号" 
    	    	TextInput:
					id: text_employeeID
    		InputScreen_BoxLayout:
				FixedSizeLabel:
    		    	text: "発生日"
    		    TextInput:
					id: text_dateofcost
    		InputScreen_BoxLayout:
				FixedSizeLabel:
    			    text: "種別"
				TextInput:
					id: text_kindofcost
    		InputScreen_BoxLayout:
				FixedSizeLabel:
    			    text: "目的地／品目"
				TextInput:
					id: text_detail
    		InputScreen_BoxLayout:
				FixedSizeLabel:
    			    text: "金額"
				TextInput:
					id: text_valueofcost
    		InputScreen_BoxLayout:
    		    Label:
				BoxLayout
    		    	Button:
    		    		text: "申請"
						on_press: root.submitButtonClicked()
					Button:
						text: "キャンセル"
						on_press: root.clearButtonClicked()
