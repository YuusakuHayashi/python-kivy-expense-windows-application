<InputScreen>:
    BoxLayout:
        orientation: "vertical"
    	canvas.before:
    	    Color:
    	        rgba: 0.165, 0.184, 0.235, 1
    	    Rectangle:
    	        pos: self.pos
    	        size: self.size
    	Label:
    	    size_hint_y: 0.15
    	    text: "経費申請"
    	    font_size: 32
    	BoxLayout:
    	    orientation: "vertical"
    	    size_hint_y: 0.85 
    	    PaddingBoxLayout:
    	    	Label:
    	    		text: "社員番号" 
    	    	TextInput:
					id: "text_employeeID"
    		PaddingBoxLayout:
    		    Label:
    		    	text: "発生日"
    		    TextInput:
					id: "text_dateofcost"
    		PaddingBoxLayout:
    			Label:
    			    text: "種別"
				TextInput:
					id: "text_kindofcost"
    		PaddingBoxLayout:
    			Label:
    			    text: "金額"
				TextInput:
					id: "text_valueofcost"
    		PaddingBoxLayout:
    		    Label:
				BoxLayout
    		    	Button:
    		    		text: "申請"
						on_press: root.submitButtonClicked()
					Button:
						text: "キャンセル"
						on_press: root.clearButtonClicked()
