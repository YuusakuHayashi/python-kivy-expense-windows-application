<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
    	canvas.before:
    	    Color:
    	        rgba: 0.9, 0.9, 0.9, 1
    	    Rectangle:
    	        pos: self.pos
    	        size: self.size
    	Label:
    	    size_hint_y: 1.5 
    	    text: "ログイン"
    	    font_size: 32
    	BoxLayout:
    	    orientation: "vertical"
    	    size_hint_y: 8.5 
    	    PaddingBoxLayout:
    	    	Label:
    	    		text: "ユーザ名"
    	    	TextInput:
		            font_size: 20
					id: text_userID
    		PaddingBoxLayout:
    		    Label:
    		    	text: "パスワード"
    		    TextInput:
		            font_size: 20
					id: text_password
    		    	password: True
    		Label:
				id: error_message
    		    text: ""
				color: 1, 0, 0, 1
    		Label:
    		    text: ""
    		PaddingBoxLayout:
    		    Label:
    		    	text: ""
    		    Button:
    		    	text: "ログイン"
					on_press: root.loginButtonClicked()
