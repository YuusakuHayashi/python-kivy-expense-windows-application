<TextInput>:
    multiline: False
    write_tab: False
    font_size: 16 
<Label>:
    font_size: 20
    color: 0.3, 0.3, 0.3, 1
<Button>:
    color: 0.8, 0.8, 0.8, 1
<PaddingBoxLayout@BoxLayout>:
    padding: 20 
<InputScreen_BoxLayout@BoxLayout>:
	size_hint_y: 0.15
	padding: 20 
<FixedSizeLabel@Label>
	size_hint_x: 0.4
<InputScreen>:
    BoxLayout:
        orientation: "vertical"
    	canvas.before:
    	    Color:
    	        rgba: 0.9, 0.9, 0.9, 1
    	    Rectangle:
    	        pos: self.pos
    	        size: self.size
    	Label:
    	    size_hint_y: 0.15
    	    text: "経費申請"
    	    font_size: 32
    	BoxLayout:
    	    orientation: "vertical"
    	    size_hint_y: 0.85 
    	    InputScreen_BoxLayout:
				FixedSizeLabel:
    	    		text: "社員番号" 
    	    	TextInput:
					id: text_employeeID
    		InputScreen_BoxLayout:
				FixedSizeLabel:
    		    	text: "発生日"
    		    TextInput:
					id: text_dateofcost
    		InputScreen_BoxLayout:
				FixedSizeLabel:
    			    text: "種別"
				TextInput:
					id: text_kindofcost
    		InputScreen_BoxLayout:
				FixedSizeLabel:
    			    text: "目的地／品目"
				TextInput:
					id: text_detail
    		InputScreen_BoxLayout:
				FixedSizeLabel:
    			    text: "金額"
				TextInput:
					id: text_valueofcost
    		InputScreen_BoxLayout:
    		    Label:
				BoxLayout
    		    	Button:
    		    		text: "申請"
						on_press: root.submitButtonClicked()
					Button:
						text: "キャンセル"
						on_press: root.clearButtonClicked()


<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
    	canvas.before:
    	    Color:
    	        rgba: 0.9, 0.9, 0.9, 1
    	    Rectangle:
    	        pos: self.pos
    	        size: self.size
    	Label:
    	    size_hint_y: 1.5 
    	    text: "ログイン"
    	    font_size: 32
    	BoxLayout:
    	    orientation: "vertical"
    	    size_hint_y: 8.5 
    	    PaddingBoxLayout:
    	    	Label:
    	    		text: "ユーザ名"
    	    	TextInput:
		            font_size: 20
					id: text_userID
    		PaddingBoxLayout:
    		    Label:
    		    	text: "パスワード"
    		    TextInput:
		            font_size: 20
					id: text_password
    		    	password: True
    		Label:
				id: error_message
    		    text: ""
				color: 1, 0, 0, 1
    		Label:
    		    text: ""
    		PaddingBoxLayout:
    		    Label:
    		    	text: ""
    		    Button:
    		    	text: "ログイン"
					on_press: root.loginButtonClicked()
